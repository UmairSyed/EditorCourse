@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<Employee>
@{
    Layout = "Master.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="page-header">
                <h1>@Umbraco.Field("pageName")</h1>
            </div>

			<strong><h3>Social media expert</h3></strong>
			
			<h4>Curated tweets</h4>
				
		<!-- =========== GREAT PLACE FOR CURRATED TWEETS =========== -->
           <ul class="nav nav-list">
               @foreach(dynamic item in CurrentPage.CuratedSearch) {
                <li>
                    <h5>@item.handle tweeted:</h5>
                    @item.message
                    </li>
               }
               </ul>
				
				
		<!-- ======================================================= -->
				
		</div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <footer>
                Updated by
                @Umbraco.Field("writerName")
                on
                @Umbraco.Field("updateDate", formatAsDate: true)
            </footer>
        </div>
    </div>
</div>